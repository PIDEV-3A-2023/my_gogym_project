{% extends 'baseBack.html.twig' %}

{% block title %}Liste des abonnements{% endblock %}

{% block body %}
<h1>Liste des abonnements</h1>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Nom</th>
        <th>Type</th>
        <th>Description</th>
        <th>Prix</th>
        <th>DÃ©but</th>
        <th>Fin</th>
        <th>Salle</th>
        <th>Editer</th>
    </tr>
    {% for a in Abonnements %}
    <tr>
        <td>
            {{a.getId()}}
        </td>
        <td>
            {{a.getNomA()}}
        </td>
        <td>
            {{a.getTypeA()}}
        </td>
        <td>
            {{a.getDescriptionA()}}
        </td>
        <td>
            {{a.getPrixA()}}
        </td>
        <td>
            {{a.getDebutA()|date("d/m/Y")}}
        </td>
        <td>
            {{a.getFinA()|date("d/m/Y")}}
        </td>
        <td>
            <ul>
                {% for s in a.getSalleA() %}
                    <li>
                    {{s.getNomS()}}
                    </li>
                {% endfor %}
            </ul>
        </td>
        <td>
            <a href="{{path('Delete_Abonnement',{'id':a.id})}}" class="btn btn-primary" type="submit" >Supprimer</a>
            <a href="{{path('Update_Abonnement',{'id':a.id})}}" class="btn btn-primary" type="submit" >Modifier</a>
        </td>
    </tr>
    {% else %}
    <tr>
        <td colspan="4">no records found</td>
    </tr>
    {% endfor %}
</table>
<br>
<a href="{{path('Create_Abonnement')}}" class="btn btn-primary" type="submit" >Ajouter un abonnement</a>
<br>
<br>
<a href="{{path('Create_Salle')}}" class="btn btn-primary" type="submit" >Ajouter un salle</a>
{% endblock %}