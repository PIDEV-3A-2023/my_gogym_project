{% extends 'base1.html.twig' %}

{% block title %}Produit index
{% endblock %}

{% block body %}
	<h1>Produit index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom_Prod</th>
				<th>Description</th>
				<th>Image</th>
				<th>Prix</th>
				<th>Nbr_Prods</th>
				<th>Categorie</th>
			</tr>
		</thead>
		<tbody>
			{% for produit in produits %}
				<tr>
					<td>{{ produit.id }}</td>
					<td>{{ produit.getNomProd() }}</td>
					<td>{{ produit.getDescription() }}</td>
					<td>{{ produit.getImage() }}</td>
					<td>{{ produit.getPrix() }}</td>
					<td>{{ produit.getNbrProds() }}</td>
					<td>{{ produit.getCategorie() }}</td>
					<td>
						<a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
						<a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
						<a href="{{ path('add_panier', { id: produit.id }) }}">Ajouter au panier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_produit_new') }}">Create new</a>

{% endblock %}
